@page
@using PizzaStore.Helpers
@model PizzaStore.Pages.Staff.ManageAccountModel

@{
    ViewData["Title"] = "Manage Accounts";
    bool isStaff = User.IsInRole("Staff");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/manageAccount.css" />
    <link rel="stylesheet" href="https://unpkg.com/boxicons@latest/css/boxicons.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@100;200;300;400;500;600;700&display=swap" rel="stylesheet" />
</head>
<body>

    <div class="managerAccountHome">
        <h3>Manage Accounts</h3>
        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Account[0].UserName)</th>
                        <th>@Html.DisplayNameFor(model => model.Account[0].Password)</th>
                        <th>@Html.DisplayNameFor(model => model.Account[0].FullName)</th>
                        <th>@Html.DisplayNameFor(model => model.Account[0].Type)</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Account)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                            <td style="width: 200px;">
                                <div class="password-container">
                                    <input type="password" class="password-input" value="@Html.DisplayFor(modelItem => item.Password)" readonly />
                                    <button class="btn-show-password" onclick="togglePassword(this)">
                                        <i class='bx bx-show'></i>
                                    </button>
                                </div>
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Type)</td>
                            <td style="width: 15%">
                               
                                @if (isStaff)
                                {
                                    <a class="btn" asp-page="EditAccount" asp-route-id="@item.AccountID">Edit</a>
                                    <form method="post" asp-page-handler="Delete" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this account?');">
                                        <input type="hidden" name="id" value="@item.AccountID" />
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                }
                                else
                                {
                                    <a class="btn" asp-page="EditAccount" asp-route-id="@item.AccountID">Edit</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @if (isStaff)
            {
                <div class="createAccountContainer">
                    <a asp-page="CreateAccount" class="createAccountBtn">Create New Account</a>
                </div>
            }
        </div>
    </div>

    <script>
        function togglePassword(button) {
            var passwordInput = button.parentElement.querySelector('.password-input');
            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                button.innerHTML = "<i class='bx bx-hide'></i>";
            } else {
                passwordInput.type = "password";
                button.innerHTML = "<i class='bx bx-show'></i>";
            }
        }
    </script>

</body>
</html>
