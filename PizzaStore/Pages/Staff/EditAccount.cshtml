@page
@model PizzaStore.Pages.Staff.EditAccountModel

@{
    ViewData["Title"] = "Edit Account";
    bool isStaff = User.IsInRole("Staff");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/createAccount.css" />
    <link rel="stylesheet" href="https://unpkg.com/boxicons@latest/css/boxicons.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@100;200;300;400;500;600;700&display=swap" rel="stylesheet" />
</head>
<body>
    <section class="menu" id="menu">
        <div class="main-text">
            <h2>Edit Account</h2>
            <p>Please update the account details below.</p>
            <a asp-page="./ManageAccount" class="back-link">Back to List</a>
        </div>
        <div class="form-content">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Account.AccountID" />
                <div class="edit-input-group mb-3">
                    <label asp-for="Account.UserName">Username:</label>
                    <input asp-for="Account.UserName"/>
                    <span asp-validation-for="Account.UserName"></span>
                </div>
                <div class="edit-input-group mb-3">
                    <label asp-for="Account.Password">Password:</label>
                    <div class="edit-password" style="width: 100%; display: flex; align-items: center;">
                        <input asp-for="Account.Password" id="passwordInput" class="password-input" style="width: 90%;  margin-right: 10px;" type="text" />
                        <span asp-validation-for="Account.Password"></span>
                        <button type="button"
                                onclick="togglePasswordVisibility(this)"
                                style="background: transparent;
                                   border: none;
                                   cursor: pointer;
                                   margin-left: 10px;
                                   font-size: 16px;
                                   color: #007bff;
                                   transition: color 0.3s ease;"
                                onmouseover="this.style.color='#0056b3';"
                                onmouseout="this.style.color='#007bff';">
                            <i class='bx bx-hide'></i>
                        </button>
                    </div>
                </div>

                <div class="edit-input-group mb-3">
                    <label asp-for="Account.FullName">Full Name:</label>
                    <input asp-for="Account.FullName"/>
                    <span asp-validation-for="Account.FullName"></span>
                </div>
                <button type="submit">Save Changes</button>
            </form>
        </div>
    </section>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
<script>
    function togglePasswordVisibility(button) {
        var passwordInput = button.parentElement.querySelector('.password-input');
        if (passwordInput.type === "password") {
            passwordInput.type = "text";
            button.innerHTML = "<i class='bx bx-hide'></i>";
        } else {
            passwordInput.type = "password";
            button.innerHTML = "<i class='bx bx-show'></i>";
        }
    }
</script>