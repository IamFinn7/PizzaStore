@page
@model PizzaStore.Pages.CartItem.CartModel

@{
    ViewData["Title"] = "Shopping Cart";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" href="https://unpkg.com/boxicons@latest/css/boxicons.min.css" />
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link href="https://fonts.googleapis.com/css2?family=Raleway:wght@100;200;300;400;500;600;700&display=swap" rel="stylesheet" />
<link rel="stylesheet" href="~/css/cart.css">
</head>
<body>
    <section class="menu" id="menu"> 
<h2 style="margin-top: 20px; margin-bottom: -20px;" class="cart-title">Shopping Cart</h2>

@if (Model.CartItems.Any())
{
    <div class="cart-container">
        <table class="cart-table">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CartItems)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>@String.Format("${0:F2}", item.Price)</td>
                        <td>@item.Quantity</td>
                        <td>
                            <form method="post" asp-page-handler="RemoveFromCart" asp-route-productId="@item.ProductID">
                                <button type="submit" class="cart-remove-button">Remove</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <h5 style="margin-top: 20px; color: red">Total Amount: @Model.TotalPrice.ToString("C")</h5>

                <form method="post" asp-page-handler="Checkout" class="mt-3">
                    <button type="button" class="btn btn-primary" onclick="openModal()">Checkout</button>
                </form>

                <button type="button" class="btn btn-primary" onclick="openVNPAYModal()">Checkout With VNPAY</button>
    </div>
}
else
{
    <p>Your cart is empty.</p>
}
    </section>

    <!-- Popup Modal -->
    <div id="checkoutModal" class="cart-popup" style="display:none;">
        <div class="cart-popup-content">
            <span class="cart-close" onclick="closeModal()">&times;</span>
            <h2>Enter Shipping Information</h2>
            <form id="checkoutForm" method="post" asp-page-handler="Checkout" onsubmit="return validateForm()">
                <div class="cart-input-group">
                    <label for="contactName" class="cart-label">Contact Name:</label>
                    <input type="text" id="contactName" name="contactName" class="cart-input" required />
                </div>
                <div class="cart-input-group">
                    <label for="phone" class="cart-label">Phone Number:</label>
                    <input type="tel" id="phone" name="phone" class="cart-input" required pattern="^\+?[0-9\s]*$" title="Please enter a valid phone number." />
                </div>
                <div class="cart-input-group">
                    <label for="address" class="cart-label">Address:</label>
                    <input type="text" id="address" name="address" class="cart-input" required />
                </div>
                <div class="cart-input-group">
                    <label for="requiredDate" class="cart-label">Delivery Date:</label>
                    <input type="date" id="requiredDate" name="requiredDate" class="cart-input" required min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                </div>
                <button type="submit" class="cart-submit-button">Confirm</button>
            </form>
        </div>
    </div>
    <!-- Popup Modal for VNPAY -->
    <div id="vnpayModal" class="cart-popup" style="display:none;">
        <div class="cart-popup-content">
            <span class="cart-close" onclick="closeVNPAYModal()">&times;</span>
            <h2>Enter VNPAY Information</h2>
            <form id="vnpayForm" method="post" asp-page-handler="Checkout" onsubmit="return validateVNPAYForm()">
                <div class="cart-input-group">
                    <label for="vnpayContactName" class="cart-label">Contact Name:</label>
                    <input type="text" id="vnpayContactName" name="contactName" class="cart-input" required />
                </div>
                <div class="cart-input-group">
                    <label for="vnpayPhone" class="cart-label">Phone Number:</label>
                    <input type="tel" id="vnpayPhone" name="phone" class="cart-input" required pattern="^\+?[0-9\s]*$" title="Please enter a valid phone number." />
                </div>
                <div class="cart-input-group">
                    <label for="vnpayAddress" class="cart-label">Address:</label>
                    <input type="text" id="vnpayAddress" name="address" class="cart-input" required />
                </div>
                <div class="cart-input-group">
                    <label for="vnpayRequiredDate" class="cart-label">Delivery Date:</label>
                    <input type="date" id="vnpayRequiredDate" name="requiredDate" class="cart-input" required min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                </div>
                <div class="cart-input-group">
                    <input value="VNPAY" name="paymentType" class="cart-input" hidden />
                </div>
                <button type="submit" class="cart-submit-button">Proceed to VNPAY</button>
            </form>
        </div>
    </div>
</body>
</html>

<script>
    function validateForm() {
        const phone = document.getElementById("phone").value;
        const phonePattern = /^\+?[0-9\s]*$/; 

        if (!phonePattern.test(phone)) {
            alert("Please enter a valid phone number.");
            return false;
        }

        return true;
    }
    function validateVNPAYForm() {
        const vnpayPhone = document.getElementById("vnpayPhone").value;
        const vnpayPhonePattern = /^\+?[0-9\s]*$/;

        if (!vnpayPhonePattern.test(vnpayPhone)) {
            alert("Please enter a valid phone number for VNPAY.");
            return false;
        }

        return true;
    }
    function openModal() {
        const today = new Date();
        const day = String(today.getDate()).padStart(2, '0');
        const month = String(today.getMonth() + 1).padStart(2, '0');
        const year = today.getFullYear();
        const minDate = `${year}-${month}-${day}`;

        document.getElementById("requiredDate").setAttribute("min", minDate);
        document.getElementById("checkoutModal").style.display = "flex";
    }

    function closeModal() {
        document.getElementById("checkoutModal").style.display = "none";
    }
    function openVNPAYModal() {
        const today = new Date();
        const day = String(today.getDate()).padStart(2, '0');
        const month = String(today.getMonth() + 1).padStart(2, '0');
        const year = today.getFullYear();
        const minDate = `${year}-${month}-${day}`;

        document.getElementById("vnpayRequiredDate").setAttribute("min", minDate);
        document.getElementById("vnpayModal").style.display = "flex";
    }

    function closeVNPAYModal() {
        document.getElementById("vnpayModal").style.display = "none";
    }
    
    document.querySelector("button.btn.btn-primary").addEventListener("click", function (event) {
        event.preventDefault();
        openModal();
    });
</script>
